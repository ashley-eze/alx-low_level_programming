#include "main.h"
/**
 * _strchr - returns a pointer to first occurence in a string
 *Description - function that locates a character in a string
 * @s: string
 * @c: character
 * Return: 0 on success
 */
char *_strchr(char *s, char c)
{
int i = 0;

	for (; s[i] >= '\0'; i++)
	{
		if (s[i] == c)
			return (&s[i]);
	}
	return (0);
}
